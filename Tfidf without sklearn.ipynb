    "#Imports \n",
    "from nltk.tokenize import word_tokenize\n",
    "import os\n",
    "import re\n",
    "import math\n",
    "import pandas as pd"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "metadata": {},
   "outputs": [],
   "source": [
    "#Tokenization of each text file\n",
    "tokenized_files=[]\n",
    "os.chdir(\"Your directory path")\n",
    "directories = os.listdir()\n",
    "for directory in directories:\n",
    "    path=os.path.join(os.getcwd(),directory)\n",
    "    os.chdir(path)\n",
    "    files = os.listdir()\n",
    "    for file in files:\n",
    "        with open(file,'r') as curr_file:\n",
    "            s = curr_file.read()\n",
    "            s = re.sub(r'[^\\w\\s]','',s)\n",
    "            tokenized_files.append(word_tokenize(s))\n",
    "    os.chdir('..')"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "metadata": {},
   "outputs": [],
   "source": [
    "#Creating a unique set of all words\n",
    "wordset=[]\n",
    "for listi in tokenized_files:\n",
    "    for words in listi:\n",
    "        if not words.isdigit():\n",
    "            wordset.append(words)\n",
    "        \n",
    "wordset = list(set(wordset))"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 4,
   "metadata": {},
   "outputs": [],
   "source": [
    "#Calculating the frequency of occurence of a specific word among all documents\n",
    "wordFreq={}\n",
    "for word in wordset:\n",
    "    count=0\n",
    "    for listj in tokenized_files:\n",
    "        if word in listj:\n",
    "            count+=1\n",
    "    wordFreq[word]=count"
   ]
  },
